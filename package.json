{
  "name": "liquid",
  "version": "1.0.0",
  "description": "Seamless and highly customizable authentication and user management server.",
  "main": "index.js",
  "scripts": {
    "test": "mocha -r ts-node/register 'test/integration/**/*.spec.ts' --exit --recursive --require test/integration/index.spec.ts",
    "build": "npm run build:server && npm run build:static",
    "copy-files": "copyfiles -u 1 \"src/**/*.yaml\" \"src/**/*.html\" \"src/**/*.json\" build/",
    "build:server": "rimraf ./build && tsc && npm run copy-files",
    "build:static": "gulp static_build",
    "start:dev": "concurrently \"nodemon --inspect\" \"npx babel --watch ./src/public/components --out-dir ./src/public/compiled --presets @babel/preset-react\"",
    "start:docker": "docker compose -f docker-compose.dev.yml up --build --detach",
    "start": "npm run build && node build/index.js",
    "pretty": "prettier --write \"./**/*.{js,ts,json}\""
  },
  "keywords": [],
  "author": "Shrihari Prakash",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/preset-react": "^7.22.3",
    "@types/amqplib": "^0.10.1",
    "@types/bcrypt": "^5.0.0",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/express-session": "^1.17.5",
    "@types/mocha": "^10.0.1",
    "@types/multer": "^1.4.7",
    "@types/multer-s3": "^3.0.0",
    "@types/node": "^18.7.23",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.1",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "copyfiles": "^2.4.1",
    "del": "^6.1.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-debug": "^4.0.0",
    "gulp-replace": "^1.1.4",
    "mocha": "^10.2.0",
    "mongodb-memory-server": "^8.12.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.294.0",
    "@aws-sdk/s3-request-presigner": "^3.294.0",
    "@node-oauth/oauth2-server": "^5.0.0-rc.2",
    "@sendgrid/mail": "^7.7.0",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.0",
    "concurrently": "^8.1.0",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.2",
    "ioredis": "^5.2.4",
    "moment": "^2.29.4",
    "mongoose": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1",
    "swagger-ui-express": "^4.6.0",
    "uuid": "^9.0.0",
    "yaml": "^2.2.2"
  }
}
